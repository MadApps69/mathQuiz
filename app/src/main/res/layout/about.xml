<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hetpatel.findx.PlayScreen">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.hetpatel.findx.About">

            <TextView
                android:padding="10sp"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="Help and Tips:\n\n>Take PI as 3.14\n\n> In Relax mode the timer is turned off and no score is registered.\n\n> Random mode randomly picks problems from all the other modes.\n\n> If your answer is incorrect you score will decrease by one.\n\n> Game overs if your answer is incorrect and your score is zero.      \n\n\nDeveloped by: Het Patel\n"
                android:id="@+id/about_byhet"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <com.google.android.gms.ads.AdView
                android:id="@+id/BannerAd1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/about_byhet"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
