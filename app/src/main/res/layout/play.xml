<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hetpatel.findx.PlayScreen">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".Main"
            android:background="#f0f0f0">

            <TextView
                android:layout_margin="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Type"
                android:id="@+id/play_type_textview"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="50sp" />

            <Button
                android:onClick="play_random_button"
                android:layout_margin="10sp"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:text="Random"
                android:id="@+id/play_random_button"
                android:layout_below="@+id/play_type_textview"
                android:layout_centerHorizontal="true"
                android:textSize="30sp" />

            <Button
                android:onClick="play_arithmetic_button"
                android:layout_margin="10sp"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:text="Arithmetic"
                android:id="@+id/play_arithmetic_button"
                android:layout_below="@+id/play_random_button"
                android:layout_centerHorizontal="true"
                android:textSize="30sp" />

            <Button
                android:onClick="play_algebra_button"
                android:layout_margin="10sp"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:text="Algebra"
                android:id="@+id/play_algebra_button"
                android:layout_below="@+id/play_arithmetic_button"
                android:layout_centerHorizontal="true"
                android:textSize="30sp" />

            <Button
                android:onClick="play_geometry_button"
                android:layout_margin="10sp"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:text="Geometry"
                android:id="@+id/play_geometry_button"
                android:layout_below="@+id/play_algebra_button"
                android:layout_centerHorizontal="true"
                android:textSize="30sp" />

            <com.google.android.gms.ads.AdView
                android:layout_below="@+id/play_geometry_button"
                android:id="@+id/BannerAd1_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                ads:adSize="SMART_BANNER"
                ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
            </com.google.android.gms.ads.AdView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
